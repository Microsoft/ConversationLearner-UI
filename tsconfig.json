{
    "compilerOptions": {
        "declaration": true,
        "skipLibCheck": true,  
        "importHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "commonjs",
        "outDir": "./dist/",
        "target": "es5",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": false, // TODO: Enable
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "files": [
        "src/index.tsx"
    ]
}