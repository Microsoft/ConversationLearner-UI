{
    "extends": [
        "tslint-react",
        "tslint-microsoft-contrib"
    ],
    "defaultSeverity": "warning",
    "rules": {
        "align": [
            true,
            "parameters",
            "arguments",
            "statements"
        ],
        "ban": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": false,
        "forin": true,
        "indent": [ true, "spaces" ],
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": true,
        "jsx-no-bind": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "label-position": true,
        "max-line-length": false, //[ true, 120 ],
        "member-ordering": [
            true,
            "public-before-private",
            "static-before-instance",
            "variables-before-functions"
        ],
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "log",
            "error",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": false,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true, "single", "jsx-double"],
        "radix": true,
        "semicolon": false, //[true, "always"],
        "switch-default": true,

        "trailing-comma": false,

        "triple-equals": [ true, "allow-null-check" ],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],

        "no-banned-terms": {
            "options": true,
            "severity": "error"
        },
        "no-delete-expression": {
            "options": true,
            "severity": "error"
        },
        "no-document-domain": {
            "options": true,
            "severity": "error"
        },
        "no-disable-auto-sanitization": {
            "options": true,
            "severity": "error"
        },
        "no-duplicate-parameter-names": {
            "options": true,
            "severity": "error"
        },
        "no-exec-script": {
            "options": true,
            "severity": "error"
        },
        "no-function-constructor-with-string-args": {
            "options": true,
            "severity": "error"
        },
        "no-octal-literal": {
            "options": true,
            "severity": "error"
        },
        "no-reserved-keywords": false,
        "no-string-based-set-immediate": {
            "options": true,
            "severity": "error"
        },
        "no-string-based-set-interval": {
            "options": true,
            "severity": "error"
        },
        "no-string-based-set-timeout": {
            "options": true,
            "severity": "error"
        },

        "align": false,
        "comment-format": false,
        "cyclomatic-complexity": false,
        "eofline": false,
        "export-name": false,
        "import-name": false,
        "indent": false,
        "insecure-random": false,
        "interface-name": false,
        "linebreak-style": false,
        "max-func-body-length": false,
        "max-line-length": false,
        "member-access": false,
        "mocha-no-side-effect-code": false,
        "newline-before-return": false,
        "no-any": false,
        "no-backbone-get-set-outside-model": false,
        "no-console": false,
        "no-default-export": false,
        "no-empty": false,
        "no-http-string": false,
        "no-multiline-string": false,
        "no-non-null-assertion": false,
        "no-relative-imports": false,
        "no-suspicious-comment": false,
        "no-trailing-whitespace": false,
        "no-unnecessary-callback-wrapper": false,
        "object-literal-key-quotes": false,
        "ordered-imports": false,
        "prefer-const": false,
        "prefer-type-cast": false,
        "quotemark": false,
        "semicolon": false,
        "trailing-comma": false,
        "type-literal-delimiter": false,
        "typedef": false,
        "variable-name": false,

        "no-import-side-effect": [true, {"ignore-module": "(\\.html|\\.css)$"}],
        "jsx-wrap-multiline": false,
        "completed-docs": false,
        "prefer-method-signature": false,
        "promise-function-async": false,
        "strict-boolean-expressions": false,
        "no-unsafe-any": false,
        "no-void-expression": ["ignore-arrow-function-shorthand"],
        "react-this-binding-issue": false
    }
}
